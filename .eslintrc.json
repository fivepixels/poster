{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "allowImportExportEverywhere": true,
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "browser": true,
    "es2021": true
  },
  "rules": {
    "no-undef": "warn"
  }
}
